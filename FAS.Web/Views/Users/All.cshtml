@using FAS.Web.Models.Users
@using FAS.Web.Infrastructure.Extensions
@model UserPageListModel
@{
    ViewData["Title"] = "All fitness members";
}
@{
    var previousDisabled = Model.CurrentPage == 1 ? "disabled" : string.Empty;
    var nextDisabled = Model.CurrentPage == Model.TotalPages ? "disabled" : string.Empty;

}

<br /><br />

<h3> @ViewData["Title"]   </h3>

    <table class="table-bordered table-hover table-responsive">
        <thead>
            <tr>
                <th class="col-md-1">
                    Photo
                </th>
                <th class="col-md-1">
                    Name & Gander
                </th>
                <th class="col-md-1">
                    Date, Mail, Phone
                </th>
                <th class="col-md-2">
                    Adress
                </th>
                <th class="col-md-1">
                    Member
                </th>
                <th class="col-md-1">
                    Proof
                </th>
                <th class="col-md-1">
                    Age
                </th>
                <th class="col-md-1">
                    Pay
                </th>
                <th class="col-md-1">
                    Star
                </th>
                <th class="col-md-1">
                    Block
                </th>

                <th class="col-md-1">
                    Modify
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
            <tr>
                <td width="150" height="170">
                    <a asp-controller="Users" asp-action="Profile" asp-route-id="@user.Id">
                        <img src="~/@user.UserPhoto" asp-append-version="true" width="150" height="170" />
                    </a>
                </td>
               
                    
               
                <td class="col-md-1">
                    @if (user.IsStarMember)
                    {<img src="~/images/5-stars.png" width="90" height="30"  />}
                    @user.FirstName  <br /> @user.LastName <br /><br />
                    @user.Sex
                </td>

                <td class="col-md-1">
                    @user.Date <br /><br />
                    @user.Email <br /><br />
                    @user.PhoneNumber
                </td>

                <td class="col-md-2">
                    @user.Adress
                </td>

                <td class="col-md-1">
                    @user.MembershipType

                <td class="col-md-1">
                    @user.ProofGiven
                </td>

                <td class="col-md-1">
                    @user.Age
                </td>

                <td class="col-md-1">
                    @user.IsPayed
                </td>

                <td class="col-md-1">
                    @user.IsStarMember
                </td>

                <td class="col-md-1">
                    @user.IsBlocked
                </td>


                <td class="col-md-1">
                    <a class="btn btn-warning btn-sm" href="/users/edit/@user.Id">Edit</a>
                </td>

            </tr>

            }
        </tbody>
    </table>

<div class="text-center">
    <ul class="pagination">
        <li class="page-item @previousDisabled">
            <a class="page-link @previousDisabled" href="/users/all?page=@Model.PreviousPage" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
            </a>
        </li>
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(Model.CurrentPage == i ? "active" : string.Empty)"><a class="page-link" href="/users/all?page=@i">@i</a></li>
        }
        <li class="page-item @nextDisabled">
            <a class="page-link @nextDisabled" href="/users/all?page=@Model.NextPage" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
            </a>
        </li>
    </ul>
</div>
