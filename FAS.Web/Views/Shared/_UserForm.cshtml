@using FAS.Services.Models
@model UserDetailsModel

<div class="col-md-3">
    @if (Model.IsStarMember)
    {<img src="~/images/5-stars.png" width="159" height="50" class="col-lg-offset-2" />}
    <img class="img-circle img-responsive" src="~/@Model.UserPhoto" asp-append-version="true" width="300" height="330" />
</div>

<form class="col-md-9" method="post">
    <div class="col-md-3">
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="form-text text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="form-text text-danger"></span>
        </div>

        <input type="hidden" asp-for="UserPhoto" />

        <div class="form-group">
            <label asp-for="Age"></label>
            <input asp-for="Age" class="form-control" />
            <span asp-validation-for="Age" class="form-text text-danger"></span>
        </div>

        <div class="form-group">
            <input type="hidden" asp-for="Sex" />
        </div>

        <div class="form-group">
            <label asp-for="Height"></label>
            <input asp-for="Height" class="form-control" />
            <span asp-validation-for="Height" class="form-text text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Weight"></label>
            <input asp-for="Weight" class="form-control" />
            <span asp-validation-for="Weight" class="form-text text-danger"></span>
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <label asp-for="Date"></label>
            <input asp-for="Date" class="form-control" />
            <span asp-validation-for="Date" class="form-text text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="form-text text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="form-text text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MembershipType"></label>
            <select name="MembershipType" asp-items=@(Html.GetEnumSelectList<MembershipType>()) class="form-control"></select>
            <span asp-validation-for="MembershipType" class="form-text text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ProofGiven"></label>
            <input asp-for="ProofGiven" class="form-control" />
            <span asp-validation-for="ProofGiven" class="form-text text-danger"></span>
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <label asp-for="Adress"></label>
            <input asp-for="Adress" class="form-control" />
            <span asp-validation-for="Adress" class="form-text text-danger"></span>
        </div>  <br />


        <div class="form-group">
            <label asp-for="IsPayed"></label>  &nbsp;
            <input asp-for="IsPayed" />
            <span asp-validation-for="IsPayed" class="form-text text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="IsStarMember"></label> &nbsp;
            <input asp-for="IsStarMember" />
            <span asp-validation-for="IsStarMember" class="form-text text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="IsTrainer"></label> &nbsp;
            <input asp-for="IsTrainer" />
            <span asp-validation-for="IsTrainer" class="form-text text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="IsBlocked"></label> &nbsp;

            @if (Model.IsBlocked == true)
            {<input asp-for="IsBlocked" checked />}
            else
            { <input asp-for="IsBlocked" />}
            <span asp-validation-for="IsBlocked" class="form-text text-danger"></span>
        </div><br />
        <div>
            <input type="submit" value="Save User" class="btn" />
        </div>
    </div>
</form>